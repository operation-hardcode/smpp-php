{
    "name": "operation-hardcode/smpp-php",
    "description": "Async SMPP protocol implementation for PHP.",
    "keywords": [
        "smpp",
        "async",
        "php"
    ],
    "type": "library",
    "require": {
        "php": ">=8.1",
        "amphp/socket": "^1.2",
        "psr/log": "^1.0 || ^2.0 || ^3.0",
        "phpinnacle/buffer": "^1.2",
        "amphp/sync": "^1.4",
        "amphp/http-client": "^4.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.18",
        "amphp/log": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "OperationHardcode\\Smpp\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OperationHardcode\\Smpp\\Tests\\": "tests"
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "v.zanfir",
            "email": "vadimzanfir@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "scripts": {
        "test": "./vendor/bin/phpunit --do-not-cache",
        "lint": "./vendor/bin/psalm --no-cache"
    }
}
